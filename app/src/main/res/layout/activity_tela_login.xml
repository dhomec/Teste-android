<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backlogin"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context="com.back4app.quickstartexampleapp.Telas.TelaLogin">

    <Button
        android:id="@+id/btCriarConta"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/fundo_botao"
        android:text="NOVA CONTA" />

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="405dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="59dp">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="138dp"
            android:layout_height="97dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logodeli" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="113dp"
            android:layout_height="101dp"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/nomedeli" />

        <EditText
            android:id="@+id/ctEmail"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/campotexto"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/ctSenha"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ctEmail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/campotexto"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <ImageView
            android:id="@+id/Login"
            android:layout_width="153dp"
            android:layout_height="101dp"
            android:layout_below="@+id/ctSenha"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/botaologin" />


    </RelativeLayout>

</RelativeLayout>
